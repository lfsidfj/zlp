<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SoftwareUpdateMapper">

	<!--表名 -->
	<sql id="tableName">
		ZLP_SOFTWARE_UPDATE
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		ID,
		CREATE_DATE,
		CREATE_USER,
		DELETE_STATUS,
		VERSIONCODE,
		VERSIONNAME,
		CONTENT,
		UPDATE_DATE,
		UPDATE_USER,
		PICTURE_ID
	</sql>
	<!-- 字段 -->
	<sql id="FieldWithAlias">
		o.ID,
		o.CREATE_DATE,
		o.CREATE_USER,
		o.DELETE_STATUS,
		o.VERSIONCODE,
		o.VERSIONNAME,
		o.CONTENT,
		o.UPDATE_DATE,
		o.UPDATE_USER,
		o.PICTURE_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},
		#{CREATE_DATE},
		#{CREATE_USER},
		#{DELETE_STATUS},
		#{VERSIONCODE},
		#{VERSIONNAME},
		#{CONTENT},
		#{UPDATE_DATE},
		#{UPDATE_USER},
		#{PICTURE_ID}
	</sql>

	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
			ID = #{ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
			<if test="CREATE_DATE!=null and CREATE_DATE!=''">
				CREATE_DATE = #{CREATE_DATE},
			</if>
			<if test="CREATE_USER!=null and CREATE_USER!=''">
				CREATE_USER = #{CREATE_USER},
			</if>
			<if test="DELETE_STATUS!=null and DELETE_STATUS!=''">
				DELETE_STATUS = #{DELETE_STATUS},
			</if>
			<if test="VERSIONCODE!=null and VERSIONCODE!=''">
				VERSIONCODE = #{VERSIONCODE},
			</if>
			<if test="VERSIONNAME!=null and VERSIONNAME!=''">
				VERSIONNAME = #{VERSIONNAME},
			</if>
			<if test="CONTENT!=null and CONTENT!=''">
				CONTENT = #{CONTENT},
			</if>
			<if test="UPDATE_USER!=null and UPDATE_USER!=''">
				UPDATE_USER = #{UPDATE_USER},
			</if>
			<if test="UPDATE_DATE!=null and UPDATE_DATE!=''">
				UPDATE_DATE = #{UPDATE_DATE},
			</if>
			<if test="PICTURE_ID!=null and PICTURE_ID!=''">
				PICTURE_ID = #{PICTURE_ID},
			</if>
		ID = ID
		where
		ID = #{ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="FieldWithAlias"></include>,
		p.PATH
		from
		<include refid="tableName"></include> o
		LEFT JOIN tb_pictures p on o.PICTURE_ID=p.PICTURES_ID
		where 1=1
		<if test="ID!=null and ID!=''">
		  and	ID = #{ID}
		</if>
		<if test="XIAZAI!=null and XIAZAI!=''">
		  order by VERSIONCODE DESC
		  limit 0,1
		</if>

	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="FieldWithAlias"></include>,
		p.PATH
		from
		<include refid="tableName"></include> o
		LEFT JOIN tb_pictures p on o.PICTURE_ID=p.PICTURES_ID
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				-->
				)
		</if>
		order by o.VERSIONCODE desc
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>


</mapper>