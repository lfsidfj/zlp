<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SmsRecordMapper">

	<!--表名 -->
	<sql id="tableName">
		ZLP_SMS_RECORD
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		SMSRECORD_ID,
		PHONE_NUMBER,
		CONTENT,
		SEND_STATUS,
		CREATE_DATE,
		CREATE_USER,
		UPDATE_DATE,
		UPDATE_USER,
		DELETE_STATUS,
		CODE
	</sql>
	<!-- 字段 -->
	<sql id="FieldWithAlias">
		o.SMSRECORD_ID,
		o.PHONE_NUMBER,
		o.CONTENT,
		o.SEND_STATUS,
		o.CREATE_DATE,
		o.CREATE_USER,
		o.UPDATE_DATE,
		o.UPDATE_USER,
		o.DELETE_STATUS,
		o.CODE
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SMSRECORD_ID},
		#{PHONE_NUMBER},
		#{CONTENT},
		#{SEND_STATUS},
		#{CREATE_DATE},
		#{CREATE_USER},
		#{UPDATE_DATE},
		#{UPDATE_USER},
		#{DELETE_STATUS},
		#{CODE}
	</sql>

	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
			SMSRECORD_ID = #{SMSRECORD_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
			SMSRECORD_ID = #{SMSRECORD_ID},
			PHONE_NUMBER = #{PHONE_NUMBER},
			CONTENT = #{CONTENT},
			SEND_STATUS = #{SEND_STATUS},
			CREATE_DATE = #{CREATE_DATE},
			CREATE_USER = #{CREATE_USER},
			UPDATE_DATE = #{UPDATE_DATE},
			UPDATE_USER = #{UPDATE_USER},
			DELETE_STATUS = #{DELETE_STATUS},
			CODE = #{CODE},
		SMSRECORD_ID = SMSRECORD_ID
		where
		SMSRECORD_ID = #{SMSRECORD_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="SMSRECORD_ID!=null and SMSRECORD_ID!=''">
			and SMSRECORD_ID = #{SMSRECORD_ID}
		</if>
		<if test="PHONE_NUMBER!=null and PHONE_NUMBER!=''">
			and PHONE_NUMBER = #{PHONE_NUMBER}
		</if>


	</select>
	<!-- 获取最新发送成功的验证码 -->
	<select id="findByNew" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="PHONE_NUMBER!=null and PHONE_NUMBER!=''">
			and PHONE_NUMBER = #{PHONE_NUMBER}
		</if>
		<if test="SEND_STATUS!=null and SEND_STATUS!=''">
			and SEND_STATUS = #{SEND_STATUS}
		</if>
		order by CREATE_DATE DESC
		limit 1




	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				-->
					CONTENT LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					or
					PHONE_NUMBER LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.lastStart!= null and pd.lastStart != ''">
			and  CREATE_DATE &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!= null and pd.lastEnd != ''">
			and	TO_DAYS(CREATE_DATE) &lt;= TO_DAYS(#{pd.lastEnd})
		</if>
		<if test="pd.SEND_STATUS!= null and pd.SEND_STATUS!= ''">
			and  SEND_STATUS = #{pd.SEND_STATUS}
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
			SMSRECORD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>


</mapper>